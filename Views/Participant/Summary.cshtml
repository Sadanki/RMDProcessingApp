@model RMDProcessingApp.Models.Participant

@{
    ViewData["Title"] = "Participant Summary";
}

<h2>Participant Summary</h2>

<table class="table">
    <tr>
        <td><strong>Participant ID</strong></td>
        <td>@Model.ParticipantId</td>
    </tr>
    <tr>
        <td><strong>Name</strong></td>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <td><strong>Date of Birth</strong></td>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
    <tr>
        <td><strong>National ID</strong></td>
        <td>@Model.NationalId</td>
    </tr>
    <tr>
        <td><strong>Plan Type</strong></td>
        <td>@Model.PlanType</td>
    </tr>
    <tr>
        <td><strong>Employment Status</strong></td>
        <td>@Model.EmploymentStatus</td>
    </tr>
    <tr>
        <td><strong>Participant Status</strong></td>
        <td>@Model.ParticipantStatus</td>
    </tr>
</table>

@model RMDProcessingApp.Models.Participant

@{
    ViewData["Title"] = "Delete Participant";
}

<h2>Delete Participant</h2>

<h4>Are you sure you want to delete this participant?</h4>

<table class="table">
    <tr><td>ID</td><td>@Model.ParticipantId</td></tr>
    <tr><td>Name</td><td>@Model.FullName</td></tr>
    <tr><td>Plan Type</td><td>@Model.PlanType</td></tr>
    <tr><td>Participant Status</td><td>@Model.ParticipantStatus</td></tr>
</table>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ParticipantId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
